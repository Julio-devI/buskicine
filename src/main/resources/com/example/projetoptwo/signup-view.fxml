<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>


<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.projetoptwo.controllers.RegisterController">
    <BorderPane fx:id="root" style="-fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
        <top>
            <HBox fx:id="hboxContainer" style="-fx-background-color: #E5E5E5; -fx-padding: 5;">
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;">
                    <Button fx:id="closeButton" style="-fx-background-color: #FF5F57; -fx-background-radius: 50%; -fx-min-width: 12px; -fx-min-height: 12px; -fx-max-height: 12px; -fx-max-width: 12px;" />
                    <Button fx:id="minimizeButton" style="-fx-background-color: #FFBD2E; -fx-background-radius: 50%; -fx-min-width: 12px; -fx-min-height: 12px; -fx-max-height: 12px; -fx-max-width: 12px;" />
                    <Button fx:id="maximizeButton" style="-fx-background-color: #28C840; -fx-background-radius: 50%; -fx-min-width: 12px; -fx-min-height: 12px; -fx-max-height: 12px; -fx-max-width: 12px;" />
                </HBox>
            </HBox>
        </top>

        <center>
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <TextField fx:id="emailField" promptText="Digite seu e-mail" style="-fx-min-width: 200px; -fx-max-width: 200px;" />
                <PasswordField fx:id="passwordField" promptText="Digite sua senha" style="-fx-min-width: 200px; -fx-max-width: 200px;" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirme sua senha" style="-fx-min-width: 200px; -fx-max-width: 200px;" />
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="registerButton" text="Cadastrar" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5 20;" />
                    <Button fx:id="backToLoginButton" text="Voltar ao login" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5 20;" />
                </HBox>
            </VBox>
        </center>
    </BorderPane>

    <Button fx:id="toggleThemeButton" text="Alternar tema" style="-fx-background-color: #E5E5E5; -fx-text-fill: #333; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5 20;" StackPane.alignment="TOP_LEFT">
        <StackPane.margin>
            <Insets top="50" right="0" left="20" bottom="20" />
        </StackPane.margin>
    </Button>
</StackPane>
